{
  "manifest_version": 2,
  "name": "GPT Extension",
  "description": "Adding a chat box to access ChatGPT from a browser extension",
  "version": "1.0.0",
  "icons": {
    "256": "icons/icon256.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {"256": "icons/icon256.png"},
    "default_title": "GPT Extension!",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["index.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gpt@aramsey.co.uk"
    }
  },
  "permissions": ["storage", "clipboardWrite", "notifications"]
}
